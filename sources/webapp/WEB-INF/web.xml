<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" 
						 "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
	
	<context-param>
		<param-name>user-ext-manager</param-name>
		<param-value></param-value>
	</context-param>
	
	<!-- filters -->
	<filter>
		<filter-name>HibernateFilter</filter-name>
		<filter-class>org.myconf.servlet.HibernateFilter</filter-class>
		<init-param>
			<param-name>commit_on_close</param-name>
			<param-value>false</param-value>
		</init-param>
	</filter>
	
	<filter-mapping>
        <filter-name>HibernateFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
	
	<!-- servlets -->
    <servlet>
        <servlet-name>ActionServletExtend</servlet-name>
        <servlet-class>org.myconf.servlet.ActionServletExtend</servlet-class>
        <init-param>
            <param-name>config</param-name>
            <param-value>/WEB-INF/struts-config.xml</param-value>
        </init-param>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
            <param-name>filesDenied</param-name>
            <param-value>jsp,vm,cgi,dll,asp,php,aspx,pl,exe</param-value>
        </init-param>
		<init-param>
			<param-name>photo_saver_class</param-name>
			<param-value>com.liusoft.dlog4j.photo.FileSystemSaver</param-value>
		</init-param>
        <init-param>
        	<param-name>photo_base_path</param-name>
        	<param-value>/uploads/photo</param-value>
        </init-param>
        <init-param>
        	<param-name>photo_base_uri</param-name>
        	<param-value>/uploads/photo</param-value>
        </init-param>
        <init-param>
        	<param-name>portrait_base_path</param-name>
        	<param-value>/uploads/portrait</param-value>
        </init-param>
        <init-param>
        	<param-name>styles_base_path</param-name>
        	<param-value>/styles</param-value>
        </init-param>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>doc</servlet-name>
        <servlet-class>org.myconf.servlet.DocServlet</servlet-class>
        <load-on-startup>11</load-on-startup>
    </servlet>
	
	<servlet>
	    <servlet-name>FCKEditor_UploadServlet</servlet-name>
	    <servlet-class>org.myconf.upload.FCKEditor_UploadServlet</servlet-class>
		<!-- max upload file size in kilobytes -->
		<init-param>
			<param-name>max_upload_size</param-name>
			<param-value>2048</param-value>
		</init-param>
		<!-- use disk file upload handler -->
		<init-param>
			<param-name>file_saved_class</param-name>
			<param-value>org.myconf.upload.UploadFileHandler</param-value>
		</init-param>
		<init-param>
			<param-name>file_saved_path</param-name>
			<param-value>/uploads/content</param-value>
		</init-param>
		<init-param>
			<param-name>file_base_uri</param-name>
			<param-value>/uploads/content</param-value>
		</init-param>
        <load-on-startup>5</load-on-startup>
	</servlet>
	
    <servlet-mapping>
        <servlet-name>ActionServletExtend</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>doc</servlet-name>
        <url-pattern>/viewpaper.jsp</url-pattern>
    </servlet-mapping>
	<servlet-mapping>
			<servlet-name>FCKEditor_UploadServlet</servlet-name>
			<url-pattern>/servlet/fckeditor_upload</url-pattern>
	</servlet-mapping>	
	
    <session-config>
        <session-timeout>120</session-timeout>
    </session-config>
	
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>index.do</welcome-file>
	</welcome-file-list>
	
	<!--
	<error-page>
		<error-code>500</error-code>
		<location>/500.jsp</location>
	</error-page>
	
	<error-page>
		<error-code>403</error-code>
		<location>/403.jsp</location>
	</error-page>
	
	<error-page>
		<error-code>404</error-code>  
		<location>/index.jsp</location>
	</error-page>
	-->
	
</web-app>

